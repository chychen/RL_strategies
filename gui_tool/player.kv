
<LoadDialog>:
    id: my_widget
    RelativeLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        FloatLayout:
            FileChooserListView:
                id: filechooser
                size_hint: (1.0, 0.8)
                pos_hint: {'x':0.0, 'y':0.2}
            Button
                text: "cancel"
                size_hint: (0.3, 0.1)
                pos_hint: {'x':0.1, 'y':0.025}
                on_release: root.cancel()
            Button
                text: "open"
                size_hint: (0.3, 0.1)
                pos_hint: {'x':0.6, 'y':0.025}
                on_release: root.load(filechooser.path, filechooser.selection)

<Cursor>:
    rgb: 1., 1., 1.
    canvas.after:
        Color:
            rgb: self.rgb
        Rectangle:
            pos: self.pos
            size: 2.0 ,self.height

<SlideBar>
    canvas.after:
        Color: 
            rgba: .4, .4, .4, .4
        Rectangle:
            size: self.size
            pos: 0.0, 0.0
        Color: 
            rgba: .8, .8, .8, .8
        Rectangle:
            size: self.width, 2.0
            pos: 0.0, self.height/2-1.0


<BBallCourt>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'fullcourt.jpg'

<AppEngine>:
    court: court
    last_button: last_button
    play_pause_button: play_pause_button
    reset_button: reset_button
    next_button: next_button
    slide_bar: slide_bar
    frame_cursor: frame_cursor
    label: label

    FloatLayout:
        Button:
            id: last_button
            text: "Last"
            size_hint: (.3, .1)
            pos_hint: {'x':0, 'y':.9}
            background_color: (0, 1, 1, 1)

        Button:
            id: play_pause_button
            text: "Play/Pause"
            size_hint: (.2, .1)
            pos_hint: {'x':0.3, 'y':.9}
            background_color: (0, 1, 1, 1)

        Button:
            id: reset_button
            text: "Reset"
            size_hint: (.2, .1)
            pos_hint: {'x':0.5, 'y':.9}
            background_color: (0, 1, 1, 1)

        Button:
            id: next_button
            text: "Next"
            size_hint: (.3, .1)
            pos_hint: {'x':.7, 'y':.9}
            background_color: (0, 1, 1, 1)
        
        Label:
            id: label
            text: "[size=32]" + "(frame) " + root.frame_idx_str + " / " + root.episode_len_str + " (total)" + " Reward: " + root.reward_str +"[/size]"
            markup: True
            size_hint: (1.0, 0.1)
            pos_hint: {'x': 0.0, 'y': 0.8}
        
        RelativeLayout:
            size_hint: (0.8, 0.7)
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            BBallCourt:
                id: court

        RelativeLayout:
            size_hint: (1.0, 0.1)
            size: self.width, self.height
            pos_hint: {'x': 0.0, 'y': 0.0}
            pos: 0.0, 0.0
            SlideBar:
                id: slide_bar
            Cursor:
                id: frame_cursor
                pos: 0.0 - 1.0, 0.0